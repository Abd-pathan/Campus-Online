<%- include("header")  -%>
<div>

  <% if(user.role === 'admin'){ %>

  <form action="/updatePlacement" method="GET">
    <button type="submit" class="mt-8 ml-10  bg-blue-500 hover:bg-blue-700 text-white font-bold py-4 px-10 rounded-full ">
      +  UPDATE
    </button>
  </form>
    
  <% } %>

<!-- <section class="placement"> -->
<div class="mb-10">


<h1 class="text-center mb-10 mt-10" style="font-size:40px"> Upcoming Companies</h1>

<% placements.forEach(placement => { %>
<div class="bg-white mb-10 p-6 shadow-lg rounded-lg flex justify-between items-center ml-10 mr-10 hover:bg-purple-200">
  <div class="flex">
    <div class="mr-4">
       <img class="shadow sm:w-12 sm:h-12 w-14 h-14 rounded-full" src="<%= placement.companyAvatar ? placement.companyAvatar : './img/male.svg' %>" alt="Avatar" />
    </div>
    <div>
      <h1 class="text-xl font-bold text-gray-700 mb-2 mx-5"><%= placement.companyName %></h1>
      <div class="flex justify-between w-1/2 mx-5">
        <h1 class="text-lg font-bold text-blue-500"><%= placement.jobTitle %></h1>
        <span class="font-bold text-lg text-red-800">salary: â‚¹<%= placement.salary %></span>
      </div>
      <p class="text-gray-600 mx-5"><%= (placement.jobDescription).substring(0,120) %>....</p>
    </div>
  </div>   
  <a href = "<%= placement.link %>">
  <button class="bg-blue-500 hover:opacity-75 text-white rounded-full px-8 py-2">
    Register Link
  </button></a>
</div>

<% }) %>
</div>


